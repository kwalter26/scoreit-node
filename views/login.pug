extends layout

block content

  .container-fluid
    .row
      .col-md-6.offset-md-3
        img.rounded.mx-auto.d-block(src='images/baseball.png')
    .row
      .col-md-6.offset-md-3.col-xs-12
          form(action='/auth/login' method='post')
            .card
              .card-header.dirt
                h2.text-white Login
              .card-block
                .form-group
                  label.sr-only Email
                  input.form-control#inputEmail(type='email' name='email' placeholder='Email Address' required autofocus)
                .form-group
                  label.sr-only Password
                  input.form-control#inputPassword(type='password' name='password' placeholder='Password' required)
                a(href='/auth/forgot') Forgot password?
              .card-footer
                button.btn.btn-lg.btn-secondary.btn-block(type='submit') Login
