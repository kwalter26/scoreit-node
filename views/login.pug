extends layout

block content

  .container
    .row.flex-items-xs-middle
      .col-md-6.offset-md-3.col-xs-12
        form(action='/auth/login' method='post')
          h2 Login
          label.sr-only Email
          input.form-control#inputEmail(type='email' name='email' placeholder='Email Address' required autofocus)
          label.sr-only Password
          input.form-control#inputPassword(type='password' name='password' placeholder='Password' required)
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
